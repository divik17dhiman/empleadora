// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  role      Role     @default(client)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Project {
  id            Int        @id @default(autoincrement())
  onchain_pid   BigInt    @unique
  clientId      Int
  freelancerId  Int
  disputed      Boolean    @default(false)
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  milestones    Milestone[]
  client        User       @relation("ClientProjects", fields: [clientId], references: [id])
  freelancer    User       @relation("FreelancerProjects", fields: [freelancerId], references: [id])
}

model Milestone {
  id              Int      @id @default(autoincrement())
  projectId       Int
  mid             Int      // Milestone index (0, 1, 2...)
  amount_wei      String   // Amount in wei
  token_address   String?  // Token contract address (null for native AVAX)
  funded          Boolean  @default(false)
  released        Boolean  @default(false)
  deliverable_cid String?  // IPFS CID for deliverable
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  project         Project  @relation(fields: [projectId], references: [id])
}

model Event {
  id          Int      @id @default(autoincrement())
  type        String   // e.g., "milestone_funded", "milestone_released"
  project_id  Int
  milestone_id Int?
  data        Json     // Additional event data
  created_at  DateTime @default(now())
}

enum Role {
  client
  freelancer
  admin
}
